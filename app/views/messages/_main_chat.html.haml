.chat-main
  .main-header
    .main-header-leftbox
      .main-header-leftbox__currentgroup
        group name
      .main-header-leftbox__memberlist
        member
    .main-header-editbtn
      Edit
  .messages
    .message
      .message-upper
        .message-upper__talker
          kenta
        .message-upper__date
          2019/11/16(sat) 13:30
